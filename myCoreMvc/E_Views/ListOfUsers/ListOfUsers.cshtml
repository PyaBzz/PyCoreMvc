@using myCoreMvc.Controllers
@using PyaFramework.CoreMvc

@model myCoreMvc.Controllers.ListOfUsersController.ListModel
@{ ViewBag.Title = "Users";}

@if (Model.Message != null && Model.Message != string.Empty)
{
    <h2 id="message">@Model.Message</h2>
}

<h3>Users</h3>
@(Html.LinkToAction<EnterUserController>(nameof(EnterUserController.Index), "Add"))

<form asp-controller="@(Html.ShortNameOf<ListOfUsersController>())" asp-action="@nameof(ListOfUsersController.Index)">
    <h3>Search</h3>
    <label asp-for=@Model.Search_Name>Name</label>
    <input type="text" name="Search_Name" value="@Model.Search_Name" />
    <br />
    <input type="submit" name="Search" value="Search" />
</form>
<br />

@if (Model.Items != null && Model.Items.Any())
{
    <table>
        <thead>
            <tr>
                <td>Name</td>
                <td>Id</td>
                <td>Hash</td>
                <td>DateOfBirth</td>
                <td>Role</td>
                <td>Edit</td>
                <td>Set Password</td>
            </tr>
        </thead>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@(Html.LinkToAction<DetailsOfUserController>(nameof(DetailsOfUserController.Index), item.Name, item.Id))</td>
                <td>@item.Id</td>
                <td>@item.Hash</td>
                <td>@item.DateOfBirth.ToShortDateString()</td>
                <td>@item.Role</td>
                <td>@(Html.LinkToAction<EnterUserController>(nameof(EnterUserController.Index), "Go", item.Id))</td>
                <td>@(Html.LinkToAction<SetPasswordController>(nameof(EnterUserController.Index), "Go", item.Id))</td>
            </tr>
        }
    </table>
}
else
{
    <div>No Users found.</div>
}
