@using System.Linq;
@using myCoreMvc.Controllers;

@model EnterWorkPlanController.EnterModel
@{ ViewBag.Title = "WorkPlan Details"; }

<h2>
    @if (Model.Message != null && Model.Message != string.Empty)
    {<text> @Model.Message </text>}
</h2>

<a asp-controller="@nameof(ListOfWorkPlansController).Replace("Controller", "")" asp-action="@nameof(ListOfWorkPlansController.Index)">Back</a>

@if (Model.Id == Guid.Empty)
{<h3>Add WorkPlan</h3>}
else
{<h3>Edit WorkPlan</h3>}

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <label asp-for="Name"></label>
    <input type="text" name="Name" value="@Model.Name" /><span asp-validation-for="Name"></span>
    <br />
    <br />
    <input type="submit" name="Save" value="Save" />
</form>