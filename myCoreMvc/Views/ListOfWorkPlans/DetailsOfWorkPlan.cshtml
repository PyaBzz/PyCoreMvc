@using myCoreMvc.Controllers
@using myCoreMvc.Models;
@using PooyasFramework

@model WorkPlan
@{ ViewBag.Title = "WorkPlan Details"; }

@(Html.LinkToAction<ListOfWorkPlansController>(nameof(ListOfWorkPlansController.Index), "Back"))

@if (@Model != null)
{
    <h3>WorkPlan details</h3>
    @(Html.LinkToAction<EnterWorkPlanController>(nameof(EnterWorkPlanController.Index), "Edit", Model.Id))
    <br />
    <ModelDetails tag-model="Model" />
}
else
{
    <h5>WorkPlan not found!</h5>
}