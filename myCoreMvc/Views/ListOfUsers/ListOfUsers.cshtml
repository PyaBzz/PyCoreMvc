@using myCoreMvc.Controllers
@using PooyasFramework

@model myCoreMvc.Controllers.ListOfUsersController.ListModel
@{ ViewBag.Title = "Users";
    if (true)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";  //explicitly specifies the layout for this view
    }
}

@if (Model.Message != null && Model.Message != string.Empty)
{
    <h2 id="message">@Model.Message</h2>
}

<h3>Users</h3>
<a asp-controller="@(Html.ShortNameOf<EnterUserController>())" asp-action="@nameof(EnterUserController.Index)">Add</a>

<form asp-controller="@(Html.ShortNameOf<ListOfUsersController>())" asp-action="@nameof(ListOfUsersController.Index)">
    <h3>Search</h3>
    <label asp-for="Search_Name">Name</label>
    <input type="text" name="Search_Name" value="@Model.Search_Name" />
    <br />
    <input type="submit" name="Search" value="Search" />
</form>
<br />

@if (Model.Items != null && Model.Items.Any())
{
    <table>
        <thead>
            <tr>
                <td>Name</td>
                <td>Id</td>
                <td>Hash</td>
                <td>DateOfBirth</td>
                <td>Role</td>
                <td>Edit</td>
            </tr>
        </thead>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td><a asp-controller="@(Html.ShortNameOf<DetailsOfUserController>())" asp-action="@nameof(DetailsOfUserController.Index)" asp-route-id="@item.Id">@item.Name</a></td>
                <td>@item.Id</td>
                <td>@item.Hash</td>
                <td>@item.DateOfBirth.ToShortDateString()</td>
                <td>@item.Role</td>
                <td><a asp-controller="@(Html.ShortNameOf<EnterUserController>())" asp-action="@nameof(EnterUserController.Index)" asp-route-id="@item.Id">Go</a></td>
            </tr>
        }
    </table>
}
else
{
    <div>No Users found.</div>
}
