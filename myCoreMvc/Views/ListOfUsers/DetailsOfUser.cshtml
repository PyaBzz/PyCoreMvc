@using myCoreMvc.Controllers
@using myCoreMvc.Models;
@using PooyasFramework

@model User
@{ ViewBag.Title = "User Details"; }

@(Html.LinkToAction<ListOfUsersController>(nameof(ListOfUsersController.Index), "Back"))

@if (@Model != null)
{
    <h3>User details</h3>
    @(Html.LinkToAction<EnterUserController>(nameof(EnterUserController.Index), "Edit", Model.Id))
    <br />
    <ModelDetails tag-model="Model" />
}
else
{
    <h5>User not found!</h5>
}