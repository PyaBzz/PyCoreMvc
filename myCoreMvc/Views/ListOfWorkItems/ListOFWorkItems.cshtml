@using System.Linq;
@using myCoreMvc;
@using myCoreMvc.Models;

@model ListOfWorkItemsController.ListModel

@if (Model.Message != "")
{
    <h2>@Model.Message</h2>
}

<h3>List of Work Items</h3>
<a asp-action="Enter">Add</a>
@if (Model.Items != null && Model.Items.Any())
{
    <table>
        <thead>
            <tr>
                <td>Id</td>
                <td>Priority</td>
                <td>Name</td>
                <td>Edit</td>
            </tr>
        </thead>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td><a asp-action="Details" asp-route-id="@item.Id">@item.Id</a></td>
                <td>@item.Priority</td>
                <td>@item.Name</td>
                <td><a asp-action="Enter" asp-route-id="@item.Id">Go</a></td>
            </tr>
        }
    </table>
}
