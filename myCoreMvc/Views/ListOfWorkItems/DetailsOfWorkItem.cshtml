@using myCoreMvc.Controllers
@using myCoreMvc.Models;
@using PooyasFramework

@model WorkItem
@{ ViewBag.Title = "WorkItem Details"; }

@(Html.LinkToAction<ListOfWorkItemsController>(nameof(ListOfWorkItemsController.Index), "Back"))

@if (@Model != null)
{
    <h3>WorkItem details</h3>
    <br />
    <ModelDetails tag-model="Model">
        @(Html.LinkToAction<EnterWorkItemController>(nameof(EnterWorkItemController.Index), "Edit", Model.Id))
    </ModelDetails>
}
else
{
    <h5>WorkItem not found!</h5>
}
