@using System.Reflection
@using myCoreMvc.Controllers
@using PooyasFramework

<!DOCTYPE html>
<html>
<head>
    <title>@(ViewBag.Title ?? "myCoreMvc")</title>
</head>
<body>
    <header>
        <img src="~/StaticContent/Mushroom-Red-2.png" />
        <a asp-controller="@(Html.ShortNameOf<ListOfWorkPlansController>())" asp-action="@nameof(ListOfWorkPlansController.Index)">WorkPlans</a>
        <a asp-controller="@(Html.ShortNameOf<ListOfWorkItemsController>())" asp-action="@nameof(ListOfWorkItemsController.Index)">WorkItems</a>
        @{
            var methodInfos = typeof(ExperimentsController).GetMethods(BindingFlags.DeclaredOnly | BindingFlags.Public | BindingFlags.Instance);
            <text>__________Experiments: @(Html.ShortNameOf<ExperimentsController>())</text>
            foreach (var methodInfo in methodInfos)
            {
                <a asp-controller="@(Html.ShortNameOf<ExperimentsController>())" asp-action="@methodInfo.Name">@methodInfo.Name</a>
            }
        }
        @if (User.Identity.IsAuthenticated)
        {
            <form method="post" asp-controller="@(Html.ShortNameOf<AuthController>())" asp-action="@nameof(AuthController.SignOut)">
                <button type="submit">Sign Out</button>
            </form>
        }
        else
        {
            <form method="get" asp-controller="@(Html.ShortNameOf<AuthController>())" asp-action="@nameof(AuthController.SignIn)">
                <button type="submit">Sign In</button>
            </form>
        }
    </header>

    @RenderBody()

    <footer>
        @Html.Partial("Footer")
    </footer>
</body>
</html>
