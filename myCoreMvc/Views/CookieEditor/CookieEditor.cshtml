@using System.Linq;
@using myCoreMvc.Controllers;
@using PooyasFramework

@model CookieEditorController.EnterModel

<h2>Cookies</h2>

<form method="post">
    <table style="width: 100%">
        <tbody>
            @for (var i = 0; i < Model.Cookies.Count(); i++)
            {
                var cookie = Model.Cookies.ElementAt(i);
                <tr>
                    <td style="width: 20%">
                        <input type="text" name="[@i].Key" value="@cookie.Key" style="width: 100%; border: 2px solid cornflowerblue" />
                    </td>
                    <td style="width: 80%">
                        <input type="text" name="[@i].Value" value="@cookie.Value" style="width: 100%; border: 2px solid deepskyblue" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Save" />
</form>