@using System.Linq;
@using myCoreMvc.Controllers;
@using Microsoft.AspNetCore.Http;
@using PooyasFramework

@model IRequestCookieCollection

<h2>Cookies</h2>

<table style="width: 100%">
    <tbody>
        @foreach (var cookie in Model)
        {
            <tr>
                <td style="">
                    <form method="post" action="@($"/{Html.ShortNameOf<CookieEditorController>()}/{nameof(CookieEditorController.Delete)}")">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="Key" value="@cookie.Key" />
                        <input type="submit" value="X" />
                    </form>
                </td>
                <td style="width: 30%; border: 2px solid cornflowerblue">@cookie.Key</td>
                <td style="width: 70%; border: 2px solid deepskyblue">@cookie.Value</td>
            </tr>
        }
    </tbody>
</table>

<h3>Add Cookie</h3>
<form method="post" action="@($"/{Html.ShortNameOf<CookieEditorController>()}/{nameof(CookieEditorController.Add)}")">
    @Html.AntiForgeryToken()
    <table style="width: 100%">
        <tbody>
            <tr>
                <td style="width: 20%">
                    <input type="text" name="Key" placeholder="Key" style="width: 100%; border: 2px solid cornflowerblue" />
                </td>
                <td style="width: 70%">
                    <input type="text" name="Value" placeholder="Value" style="width: 100%; border: 2px solid deepskyblue" />
                </td>
                <td style="width: 10%">
                    <input type="text" name="LifeTime" placeholder="Life Time in seconds" style="width: 100%; border: 2px solid grey" />
                </td>
            </tr>
        </tbody>
    </table>
    <input type="submit" value="Add" />
</form>
