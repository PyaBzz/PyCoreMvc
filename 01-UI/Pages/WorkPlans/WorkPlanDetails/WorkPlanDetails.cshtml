@using myCoreMvc.UI.Controllers
@using myCoreMvc.Domain;
@using PyaFramework.CoreMvc

@model WorkPlan
@{ ViewBag.Title = "WorkPlan Details"; }

<a asp-controller="@(ShortName.Of<WorkPlanListController>())" asp-action="@nameof(WorkPlanListController.Index)">Back</a>

@if (@Model != null)
{
    <h3>WorkPlan details</h3>
    <br />
    <ObjectDetails Object=@Model>
        <a asp-controller="@(ShortName.Of<WorkPlanEnterController>())" asp-action="@nameof(WorkPlanEnterController.Index)" asp-route-id="@Model.Id">Edit</a>
        <ActionWithConfirm controller-type="@typeof(WorkPlanDetailsController)" method-name="@nameof(WorkPlanDetailsController.Delete)" message="Delete this" route-parameter="@Model.Id" />
    </ObjectDetails>
}
else
{
    <h5>WorkPlan not found!</h5>
}
