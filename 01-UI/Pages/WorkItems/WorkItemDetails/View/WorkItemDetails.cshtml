@using myCoreMvc.UI.Controllers
@using myCoreMvc.Domain;
@using PyaFramework.CoreMvc

@model WorkItem
@{ ViewBag.Title = "WorkItem Details"; }

@(Html.LinkToAction<WorkItemListController>(nameof(WorkItemListController.Index), "Back"))

@if (@Model != null)
{
    <h3>WorkItem details</h3>
    <br />
    <ModelDetails tag-model="Model">
        @(Html.LinkToAction<WorkItemEnterController>(nameof(WorkItemEnterController.Index), "Edit", Model.Id))
    </ModelDetails>
}
else
{
    <h5>WorkItem not found!</h5>
}
