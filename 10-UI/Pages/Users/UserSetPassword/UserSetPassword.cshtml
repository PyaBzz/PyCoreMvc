@using System.Linq;
@using myCoreMvc.UI.Controllers;
@using Baz.CoreMvc

@model UserSetPasswordController.EnterModel
@{ ViewBag.Title = $"Set Password"; }

<h2 id="message">@Model.Message</h2>

<a asp-controller="@(Short<UserListController>.Name)" asp-action="@nameof(UserListController.Index)">Back</a>

<h3 probe="UserSetPwHeader">Set Password for @Model.Name</h3>

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <label asp-for=@Model.Password></label>
    <input type="text" name="Password" value="@Model.Password" />
    <br />
    <br />
    <input type="submit" name="Save" value="Save" />
</form>